            <Button
                android:id="@+id/btn_tool_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="滤镜" />

            <Button
                android:id="@+id/btn_tool_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="文字" />

            <Button
                android:id="@+id/btn_tool_sticker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="贴纸" />

        </LinearLayout>
    </LinearLayout>

