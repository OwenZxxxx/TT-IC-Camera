<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editor.EditorFragment">

    <!-- 顶部标题栏：左返回，中标题，右保存 -->
    <LinearLayout
        android:id="@+id/layout_editor_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_editor_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_editor_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="编辑图片"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/btn_editor_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/ic_menu_save" />
    </LinearLayout>

    <!-- 中间画布区域：图片 + 变暗层 + 文字覆盖层 + 裁剪遮罩 -->
    <FrameLayout
        android:id="@+id/editor_canvas_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layout_editor_header"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 底层：可缩放/拖动的图片画布 -->
        <com.owenzx.lightedit.ui.editor.view.ZoomableImageView
            android:id="@+id/image_edit_canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            tools:src="@drawable/ic_launcher_foreground" />

        <!-- 中间：背景变暗层（文字内容编辑时显示） -->
        <View
            android:id="@+id/view_dim_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone" />

        <!-- 贴纸覆盖层 -->
        <com.owenzx.lightedit.ui.editor.sticker.StickerOverlayView
            android:id="@+id/sticker_overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />

        <!-- 中层：文字覆盖层 -->
        <com.owenzx.lightedit.ui.editor.text.TextOverlayView
            android:id="@+id/text_overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />

        <!-- 上层：裁剪遮罩 -->
        <com.owenzx.lightedit.ui.editor.crop.CropOverlayView
            android:id="@+id/crop_overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />
    </FrameLayout>

    <!-- 底部整体面板 -->
    <LinearLayout
        android:id="@+id/layout_bottom_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 上部：模式控制容器（内部一次只显示一个） -->
        <FrameLayout
            android:id="@+id/layout_mode_controls_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 裁剪模式控制条 -->
            <LinearLayout
                android:id="@+id/layout_crop_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <HorizontalScrollView
                    android:id="@+id/scroll_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/layout_crop_ratio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_ratio_free"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="自由"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="1:1"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_4_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="4:3"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_16_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="16:9"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_3_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="3:4"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_9_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="9:16" />
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/layout_crop_bottom_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="2dp">

                    <Button
                        android:id="@+id/btn_crop_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消" />

                    <TextView
                        android:id="@+id/tv_crop_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="裁剪"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_crop_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </LinearLayout>

            <!-- 旋转/翻转模式控制条 -->
            <LinearLayout
                android:id="@+id/layout_rotate_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/layout_rotate_action_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_rotate_left_90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="左转90°"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_rotate_right_90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="右转90°"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_rotate_180"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="旋转180°"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_flip_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="水平翻转"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_flip_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="垂直翻转" />
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/layout_rotate_bottom_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="6dp">

                    <Button
                        android:id="@+id/btn_rotate_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消" />

                    <TextView
                        android:id="@+id/tv_rotate_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="旋转与翻转"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_rotate_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </LinearLayout>

            <!-- 调色模式控制条 -->
            <LinearLayout
                android:id="@+id/layout_adjust_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="4dp">

                    <Button
                        android:id="@+id/btn_adjust_compare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="按住对比原图" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_adjust_sliders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:id="@+id/tv_brightness_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亮度"
                            android:layout_marginEnd="8dp" />

                        <SeekBar
                            android:id="@+id/seek_brightness"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_brightness_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:id="@+id/tv_contrast_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对比度"
                            android:layout_marginEnd="8dp" />

                        <SeekBar
                            android:id="@+id/seek_contrast"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_contrast_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/layout_adjust_presets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_adjust_reset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重置"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_brightness_minus_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亮度 -20"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_brightness_plus_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亮度 +20"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_contrast_minus_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对比度 -20"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_contrast_plus_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对比度 +20" />
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/layout_adjust_bottom_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="6dp">

                    <Button
                        android:id="@+id/btn_adjust_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消" />

                    <TextView
                        android:id="@+id/tv_adjust_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="调色"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_adjust_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </LinearLayout>

            <!-- 滤镜模式控制条 -->
            <LinearLayout
                android:id="@+id/layout_filter_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <!-- 上面：6 个滤镜按钮 -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/layout_filter_button_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_filter_original"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="原图"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_filter_bw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="黑白"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_filter_vintage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="复古"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_filter_fresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="清新"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_filter_warm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="暖色"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_filter_cool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="冷色" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- 下面：取消 - 滤镜 - 确认 -->
                <LinearLayout
                    android:id="@+id/layout_filter_bottom_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="6dp">

                    <Button
                        android:id="@+id/btn_filter_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消" />

                    <TextView
                        android:id="@+id/tv_filter_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="滤镜"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_filter_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </LinearLayout>

            <!-- 文字模式控制条：输入栏 + 样式面板 -->
            <LinearLayout
                android:id="@+id/layout_text_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:visibility="gone">

                <!-- A. 文字输入栏：只在双击文本时显示 -->
                <LinearLayout
                    android:id="@+id/layout_text_edit_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/et_text_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="点击输入文字"
                        android:singleLine="false"
                        android:maxLines="3"
                        android:background="@android:color/transparent"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/btn_text_clear"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_clear"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <ImageButton
                        android:id="@+id/btn_text_close"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_close"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <ImageButton
                        android:id="@+id/btn_text_confirm"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_save"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- B. 样式面板：字体 / 字号 / 颜色 / 透明度 + 完成/+ -->
                <LinearLayout
                    android:id="@+id/layout_text_style_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="4dp">

                    <!-- 字体 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="字体"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_font_default"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="默认" />

                        <Button
                            android:id="@+id/btn_font_serif"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="衬线" />

                        <Button
                            android:id="@+id/btn_font_mono"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="等宽" />
                    </LinearLayout>

                    <!-- 字号 12~36 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="字号"
                            android:layout_marginEnd="8dp" />

                        <SeekBar
                            android:id="@+id/seek_text_size"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_text_size_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="18" />
                    </LinearLayout>

                    <!-- 颜色 -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:paddingVertical="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/btn_color_1"
                                style="@style/TextColorCircle"
                                android:backgroundTint="@android:color/white" />

                            <View
                                android:id="@+id/btn_color_2"
                                style="@style/TextColorCircle"
                                android:backgroundTint="@android:color/black" />

                            <View
                                android:id="@+id/btn_color_3"
                                style="@style/TextColorCircle"
                                android:backgroundTint="#FF0000" />

                            <View
                                android:id="@+id/btn_color_4"
                                style="@style/TextColorCircle"
                                android:backgroundTint="#00FF00" />

                            <View
                                android:id="@+id/btn_color_5"
                                style="@style/TextColorCircle"
                                android:backgroundTint="#0000FF" />

                            <View
                                android:id="@+id/btn_color_6"
                                style="@style/TextColorCircle"
                                android:backgroundTint="#FFFF00" />

                            <View
                                android:id="@+id/btn_color_7"
                                style="@style/TextColorCircle"
                                android:backgroundTint="#FFA500" />

                            <View
                                android:id="@+id/btn_color_8"
                                style="@style/TextColorCircle"
                                android:backgroundTint="#00FFFF" />

                            <View
                                android:id="@+id/btn_color_9"
                                style="@style/TextColorCircle"
                                android:backgroundTint="#800080" />

                            <View
                                android:id="@+id/btn_color_10"
                                style="@style/TextColorCircle"
                                android:backgroundTint="#FFC0CB" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- 透明度 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="透明度"
                            android:layout_marginEnd="8dp" />

                        <SeekBar
                            android:id="@+id/seek_text_alpha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_text_alpha_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="100%" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_text_bottom_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="6dp">

                        <Button
                            android:id="@+id/btn_text_mode_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="取消" />

                        <TextView
                            android:id="@+id/tv_text_mode_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="文字"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_text_mode_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="确认" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- 贴纸模式控制条 -->
            <LinearLayout
                android:id="@+id/layout_sticker_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <!-- 上面：贴纸选择（至少 10 个） -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/layout_sticker_palette"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- 示例：具体贴纸你用 ImageButton + 自己的资源 -->
                        <ImageButton
                            android:id="@+id/btn_sticker_1"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/btn_sticker_2"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_2"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/btn_sticker_3"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_3"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/btn_sticker_4"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_4"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/btn_sticker_5"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_5"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/btn_sticker_6"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_6"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/btn_sticker_7"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_7"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />


                        <ImageButton
                            android:id="@+id/btn_sticker_8"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_8"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />


                        <ImageButton
                            android:id="@+id/btn_sticker_9"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_9"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/btn_sticker_10"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sticker_10"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="8dp" />
                        <!-- ... 至少放 10 个 btn_sticker_x -->
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- 中间：层级 / 删除 操作行 -->
                <!-- 中间：层级 / 删除 操作行（改成可横向滑动） -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:id="@+id/layout_sticker_layer_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_sticker_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清空本次" />

                        <Button
                            android:id="@+id/btn_sticker_layer_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下移一层"
                            android:layout_marginStart="8dp" />

                        <Button
                            android:id="@+id/btn_sticker_layer_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上移一层"
                            android:layout_marginStart="8dp" />

                        <Button
                            android:id="@+id/btn_sticker_bring_front"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="置顶"
                            android:layout_marginStart="8dp" />

                        <Button
                            android:id="@+id/btn_sticker_send_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="置底"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </HorizontalScrollView>


                <!-- 底部：取消 - 贴纸 - 确认 -->
                <LinearLayout
                    android:id="@+id/layout_sticker_bottom_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="6dp">

                    <Button
                        android:id="@+id/btn_sticker_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消" />

                    <TextView
                        android:id="@+id/tv_sticker_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="贴纸"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_sticker_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

        <!-- 下部：普通编辑模式的主工具栏（Tab） -->
        <LinearLayout
            android:id="@+id/layout_editor_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <Button
                android:id="@+id/btn_tool_crop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="裁剪" />

            <Button
                android:id="@+id/btn_tool_rotate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="旋转" />

            <Button
                android:id="@+id/btn_tool_adjust"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
